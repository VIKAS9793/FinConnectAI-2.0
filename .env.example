# ====================================
# FinConnectAI Environment Variables
# ====================================

# Copy this file to .env and update the values
# DO NOT commit .env to version control

# ========== Frontend Configuration ==========

# Auth0 Configuration (Required for production)
REACT_APP_AUTH0_DOMAIN=your-tenant.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-client-id
REACT_APP_AUTH0_AUDIENCE=https://api.finconnectai.com
REACT_APP_AUTH0_CALLBACK_URL=http://localhost:3000/callback
REACT_APP_AUTH0_LOGOUT_RETURN_URL=http://localhost:3000/

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5000/api

# ========== Backend Configuration ==========

# Server
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Auth0 API Configuration (Required for production)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.finconnectai.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com/
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# AI Provider Configuration (Required for production)
# Set to 'google' or 'openai' or 'hybrid'
AI_PROVIDER=hybrid

# Google AI Configuration
GOOGLE_AI_KEY=your-google-ai-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Logging
LOG_LEVEL=info

# Demo Mode (Set to 'true' to enable mock data and bypass auth in development)
DEMO_MODE=true

# ========== Database Configuration ==========
# (Configure these if using a database in production)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=finconnectai
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_SSL=false

# ========== Rate Limiting ==========
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window per IP

# ========== Session Configuration ==========
# SESSION_SECRET=your-session-secret
# SESSION_COOKIE_MAX_AGE=86400000  # 1 day in ms
